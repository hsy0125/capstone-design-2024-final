<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카드 선결제"
        android:background="@drawable/background_purple"
        android:textSize="24sp"
        android:textColor="#000000"
        android:padding="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <!-- 카드 삽입 안내 문구 -->
        <TextView
            android:id="@+id/cardInsertInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="카드를 아래 그림과 같이 넣어주세요."
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- 카드 삽입 안내 이미지 -->
        <ImageView
            android:id="@+id/cardInsertImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/insert_card" />

        <!-- 결제 금액 표시 -->
        <TextView
            android:id="@+id/paymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_gray"
            android:text="결제 금액: 10,000원"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- 카드 인식 중 안내 문구 -->
        <TextView
            android:id="@+id/cardRecognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:text="카드를 인식 중입니다.\n완료되기 전까지 카드를 빼지 말아주세요."
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>



</LinearLayout>
